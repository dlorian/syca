<div>
    <form class="form-horizontal" role="form" {{action login on="submit"}}>
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">Benutzername</label>
            <div class="col-sm-10">
                {{input type="text"  value=username class="form-control" id="username"}}
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Passwort</label>
            <div class="col-sm-10">
                {{input type="password" value=password class="form-control" id="password"}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Anmelden</button>
            </div>
        </div>
    </form>
    {{#if errorMessage}}
        <div class="alert alert-danger">{{errorMessage}}</div>
    {{/if}}
</div>