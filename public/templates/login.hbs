<div id="login-form" >
    <h1>Anmeldung</h1>
    {{#if errorMessage}}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert"  aria-hidden="true">&times;</button>
            <strong>{{errorMessage}}</strong>
        </div>
    {{/if}}
    {{#if isLoggingIn}}
        <div id="login-loader" class="well well-sm">
            <img src="../images/ajax-loader-24.gif">
        </div>
    {{/if}}
    <form class="form-horizontal" role="form" {{action login on="submit"}}>
        <div class="form-group">
            <label class="sr-only" for="username">Benutzername</label>
            {{input type="text"  value=username class="form-control" id="username" placeholder="Benutzername"}}
        </div>
        <div class="form-group">
            <label class="sr-only" for="password">Password</label>
            {{input type="password" value=password class="form-control" id="password" placeholder="Passwort"}}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default pull-right">Anmelden</button>
        </div>
    </form>
</div>